---
import PageLayout from '../layouts/PageLayout.astro';
import { pricingPlans } from '../data/pricing';
import { getTranslation } from '../data/languages';
import PricingCalculatorWrapper from '../components/PricingCalculatorWrapper';

// Get user language from URL or default to English (simple approach)
const currentLang = Astro.url.pathname.split('/')[1] || 'en';
const t = getTranslation(currentLang);
---

<PageLayout 
  title="Pricing"
  description="Explore our flexible pricing plans designed to fit your needs, from free trials to enterprise solutions."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6" data-i18n="pricingTitle">
        {t.pricingTitle}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto" data-i18n="pricingSubtitle">
        {t.pricingSubtitle}
      </p>
    </div>
  </section>

  <!-- Pricing Cards -->
  <section class="py-20 bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {pricingPlans.map((plan) => (
          <div class={`
            relative bg-white dark:bg-gray-800 rounded-2xl shadow-lg transition-all duration-300 group
            ${plan.popular ? 'border-2 border-transparent bg-gradient-to-r from-blue-500 to-indigo-600 p-0.5 scale-105' : 'border border-gray-200 dark:border-gray-700 p-8'}
            hover:shadow-2xl hover:scale-105
            ${plan.popular ? 'neon-glow-blue' : 'hover:neon-glow-subtle'}
          `}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 z-10">
                <span class="bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-4 py-2 rounded-full text-sm font-semibold neon-glow-text" data-i18n="mostPopular">
                  {t.mostPopular}
                </span>
              </div>
            )}
            
            <!-- Inner content wrapper for popular cards -->
            <div class={plan.popular ? 'bg-white dark:bg-gray-800 rounded-2xl p-8' : ''}>
              <div class="text-center mb-8">
                <div class="text-4xl mb-2">{plan.icon}</div>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2" data-i18n={`${plan.id}Plan`}>
                  {plan.name}
                </h3>
                <p class="text-gray-600 dark:text-gray-300 mb-6" data-i18n={`${plan.id}Description`}>
                  {plan.description}
                </p>
                
                <div class="mb-6">
                  <div class="text-lg font-semibold text-gray-900 dark:text-white mb-2" data-i18n={`${plan.id}CacheLifetime`}>
                    {plan.cacheLifetime}
                  </div>
                  <div class="text-sm text-gray-600 dark:text-gray-400" data-i18n={`${plan.id}AutoExtension`}>
                    {plan.autoExtension}
                  </div>
                  {plan.id === 'trial' && (
                    <div class="text-sm text-blue-600 dark:text-blue-400 mt-2" data-i18n="trialBandwidthLimit">
                      {plan.bandwidth}
                    </div>
                  )}
                  {plan.bandwidthPriceKey && (
                    <div class="text-sm text-green-600 dark:text-green-400 mt-2" data-i18n={plan.bandwidthPriceKey}>
                      {plan.bandwidthPrice}
                    </div>
                  )}
                  {plan.storagePriceKey && (
                    <div class="text-sm text-orange-600 dark:text-orange-400 mt-2" data-i18n={plan.storagePriceKey}>
                      {plan.storagePrice}
                    </div>
                  )}
                </div>
              </div>
              
              <ul class="space-y-4 mb-8">
                {plan.features.map((feature, index) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-gray-700 dark:text-gray-300" data-i18n={`${plan.id}Feature${index + 1}`}>
                      {feature}
                    </span>
                  </li>
                ))}
              </ul>
              
              {plan.id === 'enterprise' && (
                <div class="mb-6 p-4 bg-orange-50 dark:bg-orange-900/20 border border-orange-200 dark:border-orange-800 rounded-lg">
                  <p class="text-sm text-orange-800 dark:text-orange-200" data-i18n="enterpriseNote">
                    {plan.specialNote}
                  </p>
                </div>
              )}
              <div class="mb-6 text-center">
                {plan.id !== 'enterprise' ? 
                  <div class="text-sm text-gray-600 dark:text-gray-400 mb-2" data-i18n="noStorageFees">
                    No storage fees for this plan
                  </div> : ''
                }
              </div>
              
              {/* Calculator button for paid plans */}
              {plan.showCalculator && (
                <div class="mb-6">
                  <a 
                    href="#pricing-calculator"
                    class="block w-full text-center py-3 px-6 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-lg font-semibold hover:from-green-600 hover:to-emerald-700 transition-all duration-300 shadow-md hover:shadow-lg"
                    data-i18n="calculator"
                  >
                    Calculator
                  </a>
                </div>
              )}
              
              <a 
                href={plan.id !== 'trial' ? '/contact' : 'https://app.snapbyte.io/auth/register'}
                class={`
                  block w-full text-center py-4 px-6 rounded-lg font-semibold transition-all duration-300 group-hover:scale-105
                  ${plan.popular 
                    ? 'bg-gradient-to-r from-blue-500 to-indigo-600 text-white hover:from-blue-600 hover:to-indigo-700 neon-glow-button' 
                    : 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-600 hover:neon-glow-subtle-button'
                  }
                `}
                data-i18n={plan.id === 'trial' ? 'getStartedFree' : 'contactSales'}
              >
                Contact Sales
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Calculator Section -->
  <PricingCalculatorWrapper client:load plans={pricingPlans} translations={t} />
  

  <!-- FAQ Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4" data-i18n="faqTitle">
          Frequently Asked Questions
        </h2>
      </div>
      
      <div class="max-w-3xl mx-auto space-y-6">
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm transition-colors duration-300">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2" data-i18n="faqQuestion1">
            Can I change plans anytime?
          </h3>
          <p class="text-gray-600 dark:text-gray-300" data-i18n="faqAnswer1">
            Yes, you can upgrade or downgrade your plan at any time. Changes take effect immediately, 
            and we'll prorate any billing adjustments.
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm transition-colors duration-300">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2" data-i18n="faqQuestion2">
            What happens if I exceed my limits?
          </h3>
          <p class="text-gray-600 dark:text-gray-300" data-i18n="faqAnswer2">
            We'll notify you before you reach your limits. For storage and bandwidth, 
            you can either upgrade your plan or purchase additional resources as needed.
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm transition-colors duration-300">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2" data-i18n="faqQuestion3">
            Do you offer custom enterprise solutions?
          </h3>
          <p class="text-gray-600 dark:text-gray-300" data-i18n="faqAnswer3">
            Absolutely! Our Enterprise plan includes custom configurations, dedicated support, 
            and can be tailored to meet specific compliance and performance requirements.
          </p>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Neon Glow Effects */
  .neon-glow-blue {
    box-shadow: 
      0 0 20px rgba(59, 130, 246, 0.5),
      0 0 40px rgba(99, 102, 241, 0.3),
      0 0 60px rgba(59, 130, 246, 0.2);
    animation: pulse-blue 2s ease-in-out infinite alternate;
  }

  .neon-glow-subtle {
    transition: box-shadow 0.3s ease;
  }

  .neon-glow-subtle:hover {
    box-shadow: 
      0 0 15px rgba(59, 130, 246, 0.3),
      0 0 30px rgba(99, 102, 241, 0.2),
      0 0 45px rgba(59, 130, 246, 0.1);
  }

  .neon-glow-text {
    text-shadow: 
      0 0 10px rgba(255, 255, 255, 0.8),
      0 0 20px rgba(59, 130, 246, 0.6),
      0 0 30px rgba(99, 102, 241, 0.4);
    animation: glow-text 1.5s ease-in-out infinite alternate;
  }

  .neon-glow-button {
    box-shadow: 
      0 0 15px rgba(59, 130, 246, 0.4),
      0 0 25px rgba(99, 102, 241, 0.3);
    transition: all 0.3s ease;
  }

  .neon-glow-button:hover {
    box-shadow: 
      0 0 20px rgba(59, 130, 246, 0.6),
      0 0 35px rgba(99, 102, 241, 0.4),
      0 0 50px rgba(59, 130, 246, 0.2);
    transform: translateY(-2px);
  }

  .neon-glow-subtle-button {
    transition: all 0.3s ease;
  }

  .neon-glow-subtle-button:hover {
    box-shadow: 
      0 0 10px rgba(59, 130, 246, 0.3),
      0 0 20px rgba(99, 102, 241, 0.2);
    transform: translateY(-1px);
  }

  @keyframes pulse-blue {
    0% {
      box-shadow: 
        0 0 20px rgba(59, 130, 246, 0.5),
        0 0 40px rgba(99, 102, 241, 0.3),
        0 0 60px rgba(59, 130, 246, 0.2);
    }
    100% {
      box-shadow: 
        0 0 25px rgba(59, 130, 246, 0.7),
        0 0 50px rgba(99, 102, 241, 0.5),
        0 0 75px rgba(59, 130, 246, 0.3);
    }
  }

  @keyframes glow-text {
    0% {
      text-shadow: 
        0 0 10px rgba(255, 255, 255, 0.8),
        0 0 20px rgba(59, 130, 246, 0.6),
        0 0 30px rgba(99, 102, 241, 0.4);
    }
    100% {
      text-shadow: 
        0 0 15px rgba(255, 255, 255, 1),
        0 0 25px rgba(59, 130, 246, 0.8),
        0 0 35px rgba(99, 102, 241, 0.6);
    }
  }

  /* Dark mode adjustments */
  :global(.dark) .neon-glow-blue {
    box-shadow: 
      0 0 20px rgba(59, 130, 246, 0.6),
      0 0 40px rgba(99, 102, 241, 0.4),
      0 0 60px rgba(59, 130, 246, 0.3);
  }

  :global(.dark) .neon-glow-subtle:hover {
    box-shadow: 
      0 0 15px rgba(59, 130, 246, 0.4),
      0 0 30px rgba(99, 102, 241, 0.3),
      0 0 45px rgba(59, 130, 246, 0.2);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .neon-glow-blue,
    .neon-glow-subtle:hover {
      box-shadow: 
        0 0 10px rgba(59, 130, 246, 0.4),
        0 0 20px rgba(99, 102, 241, 0.3);
    }
  }

</style>
