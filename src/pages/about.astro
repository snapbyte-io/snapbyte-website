---
import PageLayout from '../layouts/PageLayout.astro';
import { teamMembers, companyInfo } from '../data/team';
---

<PageLayout 
  title="About Us"
  description="Learn about Snapbyte's mission to make high-performance web infrastructure accessible to every developer."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6" data-i18n="aboutTitle">
          Making Web Performance 
          <span class="text-blue-600 dark:text-blue-400">Accessible to Everyone</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed" data-i18n="aboutDescription">
          {companyInfo.mission}
        </p>
      </div>
    </div>
  </section>

  <!-- Company Stats -->
  <section class="py-20 bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">Founded</div>
          <div class="text-gray-600 dark:text-gray-300">{companyInfo.founded}</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">HQ</div>
          <div class="text-gray-600 dark:text-gray-300">{companyInfo.headquarters}</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">Team</div>
          <div class="text-gray-600 dark:text-gray-300">{companyInfo.employees}</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">Global</div>
          <div class="text-gray-600 dark:text-gray-300">Edge Network</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Vision & Values -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-20">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Our Vision
            </h2>
            <p class="text-xl text-gray-600 leading-relaxed">
              {companyInfo.vision}
            </p>
          </div>
          <div class="bg-blue-50 rounded-2xl p-8">
            <div class="text-center">
              <div class="text-4xl font-bold text-blue-600 mb-2">99.9%</div>
              <div class="text-gray-600 mb-4">Global Uptime</div>
              <div class="text-2xl font-bold text-blue-600 mb-2">&lt;50ms</div>
              <div class="text-gray-600 mb-4">Average Latency</div>
              <div class="text-2xl font-bold text-blue-600 mb-2">150+</div>
              <div class="text-gray-600">Edge Locations</div>
            </div>
          </div>
        </div>

        <!-- Values -->
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Our Values
          </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {companyInfo.values.map((value) => (
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">{value.title}</h3>
              <p class="text-gray-600">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Meet Our Team
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          The passionate people behind Snapbyte, working to make web performance 
          accessible to developers worldwide.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
        {teamMembers.map((member) => (
          <div class="bg-white rounded-xl p-6 shadow-sm text-center">
            <div class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-1">{member.name}</h3>
            <p class="text-blue-600 font-medium mb-3">{member.role}</p>
            <p class="text-gray-600 text-sm mb-4">{member.bio}</p>
            
            <div class="flex justify-center space-x-3">
              {member.social.twitter && (
                <a 
                  href={member.social.twitter}
                  class="text-gray-400 hover:text-blue-500 transition-colors duration-200"
                  aria-label={`${member.name} on Twitter`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                  </svg>
                </a>
              )}
              {member.social.linkedin && (
                <a 
                  href={member.social.linkedin}
                  class="text-gray-400 hover:text-blue-600 transition-colors duration-200"
                  aria-label={`${member.name} on LinkedIn`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"/>
                    <circle cx="4" cy="4" r="2"/>
                  </svg>
                </a>
              )}
              {member.social.github && (
                <a 
                  href={member.social.github}
                  class="text-gray-400 hover:text-gray-900 transition-colors duration-200"
                  aria-label={`${member.name} on GitHub`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-blue-600">
    <div class="container mx-auto px-6 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Want to Join Our Mission?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          We're always looking for talented people who share our passion 
          for making the web faster and more accessible.
        </p>
        <a 
          href="/contact"
          class="bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-colors duration-200"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</PageLayout>
