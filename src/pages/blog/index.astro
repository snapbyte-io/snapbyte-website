---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const featuredPosts = sortedPosts.filter(post => post.data.featured);
const recentPosts = sortedPosts.slice(0, 6);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<PageLayout 
  title="Blog"
  description="Insights, tutorials, and best practices for web performance, file optimization, and modern development."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-blue-50 to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 relative overflow-hidden transition-colors duration-300">
    <div class="container mx-auto px-6 text-center relative z-10">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800 dark:from-white dark:via-blue-300 dark:to-purple-300 bg-clip-text text-transparent mb-8 leading-tight animate-fade-in">
          Snapbyte Blog
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-12 leading-relaxed animate-slide-up" style="animation-delay: 0.2s;">
          Insights, tutorials, and best practices for web performance, 
          file optimization, and modern development.
        </p>
        
        <!-- Statistics -->
        <div class="grid md:grid-cols-3 gap-8 animate-slide-up" style="animation-delay: 0.4s;">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold bg-gradient-to-r from-blue-500 to-indigo-600 bg-clip-text text-transparent mb-2">
              {sortedPosts.length}+
            </div>
            <div class="text-gray-600 dark:text-gray-300 font-medium">Articles Published</div>
          </div>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold bg-gradient-to-r from-green-500 to-teal-600 bg-clip-text text-transparent mb-2">
              10k+
            </div>
            <div class="text-gray-600 dark:text-gray-300 font-medium">Developers Reached</div>
          </div>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold bg-gradient-to-r from-orange-500 to-red-600 bg-clip-text text-transparent mb-2">
              50+
            </div>
            <div class="text-gray-600 font-medium">Optimization Tips</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Background decorations -->
    <div class="absolute top-0 left-0 w-full h-full">
      <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-blue-100 to-purple-100 rounded-full opacity-60 animate-float"></div>
      <div class="absolute bottom-20 right-10 w-24 h-24 bg-gradient-to-br from-green-100 to-teal-100 rounded-full opacity-60 animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/4 w-20 h-20 bg-gradient-to-br from-orange-100 to-red-100 rounded-full opacity-60 animate-float" style="animation-delay: 4s;"></div>
    </div>
  </section>

  <!-- Featured Posts -->
  {featuredPosts.length > 0 && (
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16 animate-fade-in">
          <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-gray-900 to-blue-600 bg-clip-text text-transparent mb-6">
            Featured Articles
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Handpicked articles covering the most important topics in web optimization and performance.
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {featuredPosts.map((post, index) => (
            <article 
              class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:scale-105 animate-slide-up"
              style={`animation-delay: ${index * 0.2}s;`}
            >
              <div class="h-48 bg-gradient-to-br from-blue-100 via-purple-100 to-indigo-100 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 via-purple-500/20 to-indigo-500/20"></div>
                <div class="absolute bottom-4 left-4 flex flex-wrap gap-2">
                  {post.data.tags.slice(0, 2).map((tag: string) => (
                    <span class="px-3 py-1 bg-white/90 text-blue-700 text-sm font-medium rounded-full backdrop-blur-sm">
                      #{tag}
                    </span>
                  ))}
                </div>
              </div>
              <div class="p-8">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-gradient-to-br from-blue-100 to-purple-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                      </svg>
                    </div>
                    <span class="text-blue-600 font-medium">{post.data.author}</span>
                  </div>
                  <span class="text-gray-400">•</span>
                  <time class="text-gray-500 font-medium">{formatDate(post.data.pubDate)}</time>
                </div>
                
                <h3 class="text-2xl font-bold text-gray-900 mb-4 leading-tight group-hover:text-blue-600 transition-colors duration-300">
                  <a href={`/blog/${post.id}`}>
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 mb-6 leading-relaxed">
                  {post.data.description}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(2, 5).map((tag: string) => (
                      <span class="px-3 py-1 bg-gray-100 text-gray-600 text-sm rounded-full hover:bg-blue-100 hover:text-blue-700 transition-colors duration-300">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <a 
                    href={`/blog/${post.id}`}
                    class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-all duration-300 group-hover:translate-x-1"
                  >
                    Read More
                    <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Posts -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-blue-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16 animate-fade-in">
        <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-gray-900 to-blue-600 bg-clip-text text-transparent mb-6">
          Latest Articles
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Stay up to date with our latest insights, tutorials, and industry best practices.
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto space-y-8">
        {recentPosts.map((post, index) => (
          <article 
            class="group bg-white rounded-2xl shadow-lg p-8 hover:shadow-2xl transition-all duration-500 transform hover:scale-102 animate-slide-up"
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <div class="flex flex-col md:flex-row md:items-center md:space-x-8">
              <div class="flex-1">
                <div class="flex items-center space-x-4 mb-3">
                  <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-gradient-to-br from-blue-100 to-purple-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                      </svg>
                    </div>
                    <span class="text-blue-600 font-medium">{post.data.author}</span>
                  </div>
                  <span class="text-gray-400">•</span>
                  <time class="text-gray-500 font-medium">{formatDate(post.data.pubDate)}</time>
                  {post.data.featured && (
                    <>
                      <span class="text-gray-400">•</span>
                      <span class="px-3 py-1 bg-gradient-to-r from-yellow-100 to-orange-100 text-yellow-700 text-xs rounded-full font-medium border border-yellow-200">
                        ⭐ Featured
                      </span>
                    </>
                  )}
                </div>
                
                <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight group-hover:text-blue-600 transition-colors duration-300">
                  <a href={`/blog/${post.id}`}>
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 mb-4 leading-relaxed">
                  {post.data.description}
                </p>
                
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.slice(0, 4).map((tag: string) => (
                    <span class="px-3 py-1 bg-gradient-to-r from-gray-100 to-blue-100 text-gray-600 text-sm rounded-full hover:from-blue-100 hover:to-purple-100 hover:text-blue-700 transition-all duration-300">
                      #{tag}
                    </span>
                  ))}
                </div>
              </div>
              
              <div class="mt-6 md:mt-0">
                <a 
                  href={`/blog/${post.id}`}
                  class="inline-flex items-center bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-xl font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg group"
                >
                  Read Article
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="py-20 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 relative overflow-hidden">
    <div class="container mx-auto px-6 text-center relative z-10">
      <div class="max-w-2xl mx-auto animate-fade-in">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Stay Updated
        </h2>
        <p class="text-xl text-blue-100 mb-8 leading-relaxed">
          Get the latest insights on web performance, optimization techniques, 
          and Snapbyte updates delivered straight to your inbox.
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 px-6 py-4 rounded-xl border-0 focus:ring-4 focus:ring-white/30 focus:outline-none text-gray-900 font-medium shadow-lg"
            required
          >
          <button 
            type="submit"
            class="bg-white text-blue-600 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
          >
            Subscribe
          </button>
        </form>
        
        <p class="text-blue-100 text-sm mt-4">
          📧 No spam, unsubscribe at any time. Join 10,000+ developers!
        </p>
      </div>
    </div>
    
    <!-- Background decorations -->
    <div class="absolute top-0 left-0 w-full h-full">
      <div class="absolute top-10 left-10 w-20 h-20 bg-white opacity-10 rounded-full animate-pulse"></div>
      <div class="absolute bottom-10 right-10 w-16 h-16 bg-white opacity-10 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/4 w-12 h-12 bg-white opacity-10 rounded-full animate-pulse" style="animation-delay: 4s;"></div>
    </div>
  </section>
</PageLayout>

<style>
  .hover\:scale-102:hover {
    transform: scale(1.02);
  }
</style>
