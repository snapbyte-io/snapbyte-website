---
import { siteConfig, navigation } from '../data/site-config';
import { contactInfo } from '../data/contact';
---

<footer class="bg-gray-900 dark:bg-gray-950 text-white transition-colors duration-300">
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <svg class="w-8 h-8 text-blue-400 dark:text-blue-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
          </svg>
          <span class="text-xl font-bold">Snapbyte</span>
        </div>
        <p class="text-gray-300 dark:text-gray-400 mb-6 max-w-md">
          {siteConfig.description}
        </p>
        <div class="flex space-x-4">
          <a 
            href={siteConfig.links.twitter} 
            class="text-gray-400 dark:text-gray-500 hover:text-white dark:hover:text-gray-300 transition-colors duration-200"
            aria-label="Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
            </svg>
          </a>
          <a 
            href={siteConfig.links.linkedin} 
            class="text-gray-400 hover:text-white transition-colors duration-200"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </a>
          <a 
            href={siteConfig.links.github} 
            class="text-gray-400 hover:text-white transition-colors duration-200"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Navigation -->
      <div>
        <h3 class="text-lg font-semibold mb-4" data-i18n="navigation">Navigation</h3>
        <ul class="space-y-2">
          {navigation.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-gray-300 dark:text-gray-400 hover:text-white dark:hover:text-gray-200 transition-colors duration-200"
                data-i18n={item.name}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h3 class="text-lg font-semibold mb-4" data-i18n="contact">Contact</h3>
        <ul class="space-y-2 text-gray-300 dark:text-gray-400">
          <li>
            <a 
              href={`mailto:${contactInfo.email}`}
              class="hover:text-white dark:hover:text-gray-200 transition-colors duration-200"
            >
              {contactInfo.email}
            </a>
          </li>
          <li>
            <a 
              href={`tel:${contactInfo.phone}`}
              class="hover:text-white dark:hover:text-gray-200 transition-colors duration-200"
            >
              {contactInfo.phone}
            </a>
          </li>
          <li class="text-sm">
            {contactInfo.address.city}, {contactInfo.address.state}
          </li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-800 dark:border-gray-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 dark:text-gray-500 text-sm">
          Â© {new Date().getFullYear()} Snapbyte. <span data-i18n="allRightsReserved">All rights reserved</span>.
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="/privacy" class="text-gray-400 dark:text-gray-500 hover:text-white dark:hover:text-gray-300 text-sm transition-colors duration-200" data-i18n="privacyPolicy">
            Privacy Policy
          </a>
          <a href="/terms" class="text-gray-400 dark:text-gray-500 hover:text-white dark:hover:text-gray-300 text-sm transition-colors duration-200" data-i18n="termsOfService">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
