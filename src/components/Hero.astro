---
---

<section class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-20 lg:py-32 overflow-hidden transition-colors duration-300">
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-5xl mx-auto text-center">
      <div class="animate-fade-in">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-gray-900 dark:text-white mb-6 leading-tight" data-i18n="heroTitle">
          Developer-First 
          <span class="bg-gradient-to-r from-blue-500 via-indigo-600 to-purple-600 dark:from-blue-400 dark:via-indigo-500 dark:to-purple-500 bg-clip-text text-transparent animate-pulse">
            File Caching
          </span>
          <br class="hidden md:block">
          Made Simple
        </h1>
      </div>
      
      <div class="animate-slide-up" style="animation-delay: 0.2s;">
        <p 
            class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed max-w-4xl mx-auto" 
            data-i18n="heroDescription"
        />
      </div>
      
      <div class="animate-slide-up flex flex-col sm:flex-row gap-4 justify-center items-center mb-12" style="animation-delay: 0.4s;">
        <a 
          href="https://app.snapbyte.io/auth/register"
          class="bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:from-blue-600 hover:to-indigo-700 transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl"
          data-i18n="getStarted"
        />
        <a 
          href="#demo"
          class="flex items-center text-gray-700 dark:text-gray-300 px-8 py-4 rounded-xl text-lg font-semibold hover:bg-white hover:shadow-lg transition-all duration-300 border-2 border-gray-300 hover:border-blue-300 group"
        >
          <span class="flex items-center" data-i18n="seeHowItWorks"/>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Enhanced Background decoration -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
    <!-- Animated floating elements -->
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-blue-200 to-purple-200 rounded-full opacity-30 blur-3xl animate-pulse" style="animation-delay: 0s;"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-br from-indigo-200 to-green-200 rounded-full opacity-30 blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-1/4 w-40 h-40 bg-gradient-to-br from-purple-200 to-pink-200 rounded-full opacity-20 blur-2xl animate-pulse" style="animation-delay: 4s;"></div>
    <div class="absolute top-1/4 right-1/4 w-60 h-60 bg-gradient-to-br from-cyan-200 to-green-200 rounded-full opacity-20 blur-3xl animate-pulse" style="animation-delay: 6s;"></div>
    
    <!-- Geometric shapes -->
    <div class="absolute top-20 left-20 w-4 h-4 bg-green-400 rounded-full animate-bounce" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-32 right-32 w-6 h-6 bg-purple-400 rounded-full animate-bounce" style="animation-delay: 3s;"></div>
    <div class="absolute top-1/3 right-20 w-3 h-3 bg-indigo-400 rounded-full animate-bounce" style="animation-delay: 5s;"></div>
    
    <!-- Floating particles -->
    <div class="absolute top-40 left-1/3 w-2 h-2 bg-green-300 rounded-full opacity-60 animate-ping" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-40 left-1/4 w-2 h-2 bg-purple-300 rounded-full opacity-60 animate-ping" style="animation-delay: 4s;"></div>
    <div class="absolute top-2/3 right-1/3 w-2 h-2 bg-indigo-300 rounded-full opacity-60 animate-ping" style="animation-delay: 6s;"></div>
  </div>
</section>
