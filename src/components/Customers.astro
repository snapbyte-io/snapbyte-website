---
import { customers } from "../data/customers";
---

<section class="py-16 bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-4xl font-bold mb-12 text-gray-900 dark:text-white" data-i18n="customersTitle">Featured Customers</h2>

    <div class={`${customers.length === 1 ? 'flex justify-center' : 'grid grid-cols-1 lg:grid-cols-2 gap-8 justify-items-center'}`}>
      {customers.map((customer, index) => (
        <div class={`group relative bg-white dark:bg-gray-800 rounded-3xl shadow-xl hover:shadow-2xl dark:shadow-gray-900/50 p-8 transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 dark:border-gray-700 overflow-hidden w-full ${customers.length === 1 ? 'max-w-lg' : 'max-w-2xl'}`}>
          {/* Background gradient overlay */}
          <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          {/* Logo and company info */}
          <div class="relative z-10 mb-8">
            <a
              href={customer.website}
              target="_blank"
              rel="noopener noreferrer"
              class="group/link block transition-transform duration-300 hover:scale-105"
            >
              <div class="text-center">
                <img
                  src={customer.logo.src}
                  alt={customer.name + ' logo'}
                  class="mx-auto h-16 mb-3 filter group-hover/link:brightness-110 transition-all duration-300"
                  loading="lazy"
                />
                <div class="flex items-center justify-center space-x-2">
                  <p class="text-xl font-bold text-blue-600 dark:text-blue-400 group-hover/link:text-blue-700 dark:group-hover/link:text-blue-300 transition-colors duration-300">
                    {customer.name}
                  </p>
                  <svg class="w-4 h-4 text-blue-500 dark:text-blue-400 group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </div>
              </div>
            </a>
          </div>

          {/* Statistics */}
          <div class="relative z-10 mb-8">
            <div class="grid grid-cols-2 gap-6">
              <div class="text-center bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/30 dark:to-blue-800/30 rounded-2xl p-6 border border-blue-200 dark:border-blue-700/50">
                <div class="mb-2">
                  <p class="text-4xl font-bold text-blue-700 dark:text-blue-300 mb-1">
                    {customer.bandwidthPBPerMonth}
                    <span class="text-2xl">PB+</span>
                  </p>
                  <div class="w-12 h-1 bg-gradient-to-r from-blue-500 to-blue-600 mx-auto rounded-full"></div>
                </div>
                <p class="text-sm text-gray-600 dark:text-gray-400 font-medium" data-i18n="customersBandwidthPerMonth">bandwidth per month</p>
              </div>
              
              <div class="text-center bg-gradient-to-br from-indigo-50 to-indigo-100 dark:from-indigo-900/30 dark:to-indigo-800/30 rounded-2xl p-6 border border-indigo-200 dark:border-indigo-700/50">
                <div class="mb-2">
                  <p class="text-4xl font-bold text-indigo-700 dark:text-indigo-300 mb-1">
                    {customer.storageTB}
                    <span class="text-2xl">TB</span>
                  </p>
                  <div class="w-12 h-1 bg-gradient-to-r from-indigo-500 to-indigo-600 mx-auto rounded-full"></div>
                </div>
                <p class="text-sm text-gray-600 dark:text-gray-400 font-medium" data-i18n="customersDataServed">data served</p>
              </div>
            </div>
          </div>

          {/* Testimonial */}
          <div class="relative z-10">
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6 border-l-4 border-blue-500 dark:border-blue-400">
              <div class="flex items-start space-x-3">
                <svg class="w-8 h-8 text-blue-500 dark:text-blue-400 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                </svg>
                <p class="text-gray-700 dark:text-gray-300 italic text-lg leading-relaxed flex-1">
                  {customer.satisfactionNote}
                </p>
              </div>
            </div>
          </div>

          {/* Decorative elements */}
          <div class="absolute top-6 right-6 w-16 h-16 bg-gradient-to-br from-blue-400/10 to-indigo-400/10 rounded-full blur-xl group-hover:scale-150 transition-transform duration-500"></div>
          <div class="absolute bottom-6 left-6 w-10 h-10 bg-gradient-to-br from-indigo-400/10 to-purple-400/10 rounded-full blur-lg group-hover:scale-125 transition-transform duration-700"></div>
        </div>
      ))}
    </div>
  </div>
</section>