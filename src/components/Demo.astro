        <div class="p-6">
          <pre class="text-green-400 text-sm md:text-base overflow-x-auto"><code>{`// Upload and optimize a file in seconds
import { Snapbyte } from '@snapbyte/sdk';

const snapbyte = new Snapbyte(process.env.SNAPBYTE_API_KEY);

// Upload file with automatic optimization
const result = await snapbyte.upload({
  file: './my-image.jpg',
  optimize: true,
  formats: ['webp', 'avif', 'jpeg'],
  sizes: [400, 800, 1200]
});

console.log(\`File available at: \${result.url}\`);
// â†’ https://cdn.snapbyte.com/abc123/image.jpg

