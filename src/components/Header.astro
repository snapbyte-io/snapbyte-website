---
import { navigation } from '../data/site-config';
---

<header class="fixed top-0 w-full bg-white/95 dark:bg-gray-900/95 backdrop-blur-md border-b border-gray-200 dark:border-gray-700 z-50 transition-colors duration-300">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 text-xl font-bold text-gray-900 dark:text-white group pr-16">
        <svg class="w-8 h-8 text-blue-600 dark:text-blue-400 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
        </svg>
        <span class="bg-gradient-to-r from-gray-900 to-blue-600 dark:from-white dark:to-blue-400 bg-clip-text text-transparent">Snapbyte</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navigation.map((item) => (
          <a 
            href={item.href}
            class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors duration-200 font-medium relative group"
            data-i18n={item.name}
          >
            {item.name}
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-500 to-indigo-600 dark:from-blue-400 dark:to-indigo-500 transition-all duration-300 group-hover:w-full"></span>
          </a>
        ))}
      </div>
      
      <!-- Controls -->
      <div class="flex items-center space-x-4">
        <!-- Theme & Language Controls -->
        <div id="header-controls" class="hidden md:flex items-center space-x-3">
          <!-- Theme and Language components will be mounted here -->
        </div>

        <!-- CTA Buttons -->
        <div class="hidden md:flex items-center space-x-4">
          <a 
            href="https://app.snapbyte.io/auth/register" 
            class="bg-gradient-to-r from-blue-500 to-indigo-600 dark:from-blue-400 dark:to-indigo-500 text-white px-6 py-2 rounded-lg hover:from-blue-600 hover:to-indigo-700 dark:hover:from-blue-500 dark:hover:to-indigo-600 transition-all duration-300 font-medium transform hover:scale-105 shadow-lg"
            data-i18n="getStarted"
          >
            Get Started
          </a>
        </div>
        
        <!-- Mobile Menu Button -->
        <button 
          class="md:hidden p-2 text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-all duration-200"
          onclick="toggleMobileMenu()"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200 dark:border-gray-700">
      <div class="pt-4 space-y-4">
        {navigation.map((item) => (
          <a 
            href={item.href}
            class="block text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-gray-800 px-3 py-2 rounded-lg transition-all duration-200 font-medium"
            data-i18n={item.name}
          >
            {item.name}
          </a>
        ))}
        
        <!-- Mobile Theme & Language Controls -->
        <div id="mobile-header-controls" class="flex items-center justify-center space-x-4 pt-4 border-t border-gray-200 dark:border-gray-700">
          <!-- Theme and Language components will be mounted here -->
        </div>
        
        <div class="pt-4 space-y-2">
          <a 
            href="https://app.snapbyte.io/auth/register" 
            class="block bg-gradient-to-r from-blue-500 to-indigo-600 dark:from-blue-400 dark:to-indigo-500 text-white px-4 py-3 rounded-lg hover:from-blue-600 hover:to-indigo-700 dark:hover:from-blue-500 dark:hover:to-indigo-600 transition-all duration-300 font-medium text-center transform hover:scale-105"
            data-i18n="getStarted"
          >
            Get Started
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    if (menu) {
      menu.classList.toggle('hidden');
    }
  }
  
  // Make function global
  window.toggleMobileMenu = toggleMobileMenu;
  
  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const menu = document.getElementById('mobile-menu');
    const target = e.target;
    const button = target?.closest('button[onclick="toggleMobileMenu()"]');
    
    if (menu && !menu.contains(target) && !button) {
      menu.classList.add('hidden');
    }
  });
</script>

<script src="../scripts/header-controls.js"></script>
